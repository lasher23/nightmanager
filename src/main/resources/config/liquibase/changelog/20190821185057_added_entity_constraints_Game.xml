        <addForeignKeyConstraint baseColumnNames="guest_id"
                                 baseTableName="game"
                                 constraintName="fk_game_guest_id"
                                 referencedColumnNames="id"
                                 referencedTableName="team"/>

        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="game"
                                 constraintName="fk_game_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <addForeignKeyConstraint baseColumnNames="hall_id"
                                 baseTableName="game"
                                 constraintName="fk_game_hall_id"
                                 referencedColumnNames="id"
                                 referencedTableName="hall"/>

    </changeSet>
</databaseChangeLog>
